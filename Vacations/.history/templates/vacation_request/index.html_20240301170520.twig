{% extends 'vacation_request/base.html.twig' %}

{% block title %}VacationRequest index
{% endblock %}

{% block body %}
	<h1></h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>StartDate</th>
				<th>EndDate</th>
				<th>Note</th>
				<th>TeamLeadAction</th>
				<th>ProjectLeadAction</th>
				<th>Status</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for vacation_request in vacation_requests %}
				<tr>
					<td>{{ vacation_request.id }}</td>
					<td>{{ vacation_request.startDate ? vacation_request.startDate|date('Y-m-d') : '' }}</td>
					<td>{{ vacation_request.endDate ? vacation_request.endDate|date('Y-m-d') : '' }}</td>
					<td>{{ vacation_request.note }}</td>
					<td>{{ vacation_request.teamLeadAction ? 'Yes' : 'No' }}</td>
					<td>{{ vacation_request.projectLeadAction ? 'Yes' : 'No' }}</td>
					<td>{{ vacation_request.status }}</td>
					<td>
						<a href="{{ path('app_vacation_request_show', {'id': vacation_request.id}) }}">show</a>
						<a href="{{ path('app_vacation_request_edit', {'id': vacation_request.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_vacation_request_new') }}">Create new</a>
{% endblock %}
