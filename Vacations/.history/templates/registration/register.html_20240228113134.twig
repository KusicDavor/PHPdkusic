{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<nav>
		<ul>
			<li>
				<a href="/index">Home</a>
			</li>
			<li>
				<a href="">Administration</a>
				<ul>
					<li><a href="/users">Users</a></li>
					<li><a href="/teams">Teams</a></li>
					<li><a href="/projects">Projects</a></li>
				</ul>
			</li>
			<li>
				<a href="/databases">Databases</a>
			</li>
			<li>
				<a href="/organization">Organization</a>
				<ul>
					<li><a href="/requests">Requests</a></li>
				</ul>
			</li>
		</ul>
		<div class="user-info" style="margin-right: 20px">
			{% if app.user %}
				<div class="dropdown">
					<button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Logged:
						{{ app.user.email }}
					</button>
					<a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% else %}
				<a href="{{ path('app_login') }}">Login</a>
			{% endif %}
		</div>
	</nav>

	<div class="register-form">
		<h1>Register</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<div class="form-group">
			{{ form_row(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(registrationForm.job, {'attr': {'class': 'form-control', 'placeholder': 'Job'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(registrationForm.role, {'attr': {'class': 'form-control'}}) }}
		</div>

		<button type="submit" class="btn btn-primary">Register</button>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
