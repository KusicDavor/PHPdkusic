{% if is_granted('ROLE_ADMIN') %}
	<a style="float: inline-end; margin-right: 20px" href="{{ path('app_team_new') }}" class="btn">Create new team</a>
{% endif %}

{% for team in teams %}
	<div>
		<table class="table table-bordered table-hover table-striped">
			<tbody>
				<tr>
					<th>Team name:
						{{ team.teamName }}</th>
					<th>Team leader:
						{% if team.projectLeader %}
							{{ team.projectLeader.name }}
						{% else %}
							Not set
						{% endif %}
					</th>
					<th>Project leader:
						{% if team.projectLeader %}
							{{ team.projectLeader.name }}
						{% else %}
							Not set
						{% endif %}
					</th>
				</tr>
			</tbody>
		</table>

		<table class="table table-bordered table-hover table-striped">
			<tbody class="thead-dark">
				<tr>
					<td>Member</td>
					<td>Job</td>
					<td>
						{% if team.projectLeader %}
							{{ team.projectLeader.name }}
						{% else %}
							Not set
						{% endif %}
					</td>
					<td class="EditBtn">
						<a style="float: inline-end; margin: 5px" href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-sm btn-primary">Edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endfor %}
