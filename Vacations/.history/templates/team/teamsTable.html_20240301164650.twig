<style>
	table tr {
		text-align: center; /* or 'left', 'right', 'justify' based on your preference */
	}
</style>

{% if is_granted('ROLE_ADMIN') %}
    <a style="float: inline-block; margin: 10px" href="{{ path('app_team_new') }}" class="btn">Create new team</a>
    {% for team in teams %}
        <table class="table table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th style="width: 20%">Team name: {{ team.teamName }}</th>
                    <th style="width: 20%">Team leader: {% if team.teamLeader %}{{ team.teamLeader.name }}{% else %}Not set{% endif %}</th>
                    <th style="width: 20%">Project leader: {% if team.projectLeader %}{{ team.projectLeader.name }}{% else %}Not set{% endif %}</th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th class="EditBtn">
                            <a style="float: inline-end; margin: 5px" href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-sm btn-primary">Edit team</a>
                        </th>
                    {% endif %}
                </tr>
            </thead>
        </table>
        <table class="table table-bordered table-hover table-striped" style="width: 66.4%">
            <thead class="thead-dark">
                {% if team.users is not empty %}
                    <tr>
                        <td style="width: 25%">Member</td>
                        <td style="width: 25%">Job</td>
                        <td style="width: 25%">Role</td>
                        <td>Days of vacation available</td>
                    </tr>
                {% endif %}
            </thead>
            <tbody>
                {% for user in team.users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.job }}</td>
                        <td>{{ user.role.roleName }}</td>
                        <td>{{ user.vacationDays }}</td>
                        <td class="EditBtn">
                            <a style="margin: 5px" href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Edit user</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endfor %}
{% elseif is_granted('ROLE_TEAM_LEADER') %}
    {% for team in teams %}
        {% if team.teamLeader == app.user %}
            <table class="table table-bordered table-hover table-striped" style="width: 66.4%">
                <thead class="thead-dark">
                    {% if team.users is not empty %}
                        <tr>
                            <td style="width: 25%">Member</td>
                            <td style="width: 25%">Job</td>
                            <td style="width: 25%">Role</td>
                            <td>Days of vacation available</td>
                        </tr>
                    {% endif %}
                </thead>
                <tbody>
                    {% for user in team.users %}
                        <tr>
                            <td>{{ user.name }}</td>
                            <td>{{ user.job }}</td>
                            <td>{{ user.role.roleName }}</td>
                            <td>{{ user.vacationDays }}</td>
                        </tr>
                    </tbody>
                </tbody>
            </table>
        {% endif %}
    {% endfor %}
{% elseif is_granted('ROLE_PROJECT_LEADER') %}
    {% for team in teams %}
        {% if team.projectLeader == app.user %}
            <table class="table table-bordered table-hover table-striped" style="width: 66.4%">
                <thead class="thead-dark">
                    {% if team.users is not empty %}
                        <tr>
                            <td style="width: 25%">Member</td>
                            <td style="width: 25%">Job</td>
                            <td style="width: 25%">Role</td>
                            <td>Days of vacation available</td>
                        </tr>
                    {% endif %}
                </thead>
                <tbody>
                    {% for user in team.users %}
                        <tr>
                            <td>{{ user.name }}</td>
                            <td>{{ user.job }}</td>
                            <td>{{ user.role.roleName }}</td>
                            <td>{{ user.vacationDays }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    {% endfor %}
{% endif %}
