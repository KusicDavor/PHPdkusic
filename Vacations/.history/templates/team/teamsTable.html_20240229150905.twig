{% if is_granted('ROLE_ADMIN') %}
	<a style="float: inline-end; margin-right: 20px" href="{{ path('app_team_new') }}" class="btn">Create new team</a>
{% endif %}

<div class="table-responsive">
<a>
	<table class="table table-bordered table-hover table-striped">
		<thead class="thead-dark">
			<tr>
				<th>ID</th>
				<th>Team name</th>
				<th>Team leader</th>
				<th>Project leader</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for team in teams %}
				<tr>
					<td>{{ team.id }}</td>
					<td>{{ team.teamName }}</td>
					<td>
						{% if team.teamLeader %}
							{{ team.teamLeader.name }}
						{% else %}
							Not set
						{% endif %}
					</td>
					<td>
						{% if team.projectLeader %}
							{{ team.projectLeader.name }}
						{% else %}
							Not set
						{% endif %}
					</td>
					<td class="EditBtn">
						<a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-sm btn-primary">Edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">No records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
