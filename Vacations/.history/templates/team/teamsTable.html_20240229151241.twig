{% if is_granted('ROLE_ADMIN') %}
	<a style="float: inline-end; margin-right: 20px" href="{{ path('app_team_new') }}" class="btn">Create new team</a>
{% endif %}

<div class="table-responsive">
	{% for team in teams %}
		{{ team.teamName }}
		{% if team.teamLeader %}
			{{ team.teamLeader.name }}
		{% else %}
			Not set
		{% endif %}
		<table class="table table-bordered table-hover table-striped">
			<thead class="thead-dark">
				<tr>
					<th>Team leader</th>
					<th>Project leader</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						{% if team.teamLeader %}
							{{ team.teamLeader.name }}
						{% else %}
							Not set
						{% endif %}
					</td>
					<td>
						{% if team.projectLeader %}
							{{ team.projectLeader.name }}
						{% else %}
							Not set
						{% endif %}
					</td>
					<td class="EditBtn">
						<a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-sm btn-primary">Edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">No records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
