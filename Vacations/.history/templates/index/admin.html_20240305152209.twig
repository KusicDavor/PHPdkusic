{# index.html.twig #}

{% block content %}
	{# Retrieve $stats from cache #}
	{% set cachedStats = cache.get('stats') %}

	{# Display cachedStats in Twig #}
	<h1>Stats</h1>
	<p>Total approved requests:
		{{ cachedStats.approved }}</p>
	<p>Total declined requests:
		{{ cachedStats.declined }}</p>
	<p>Total requests:
		{{ cachedStats.total }}</p>
{% endblock %}
