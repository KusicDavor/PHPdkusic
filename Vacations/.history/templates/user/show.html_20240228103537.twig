{% extends 'user/base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th class="attributes">Email</th>

				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Role</th>
				<td>{{ user.roles ? user.role.roleName }}</td>
			</tr>
		</tbody>
	</table>
	<div style="margin-top: 10px">
		<a class="btn" href="{{ path('app_user_index') }}">Back to list</a>

		<a class="btn" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
		<div style="position: absolute; margin-left: 180px; top: 228px">
			{{ include('user/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
