{% extends 'user/base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<div class="container">
<h1>Users</h1>

<table class="table table-striped">
<thead class="thead-dark">
<tr>
<th scope="col">Id</th>
<th scope="col">Email</th>
<th scope="col">Roles</th>
<th scope="col">Actions</th>
</tr>
</thead>
<tbody>
{% for user in users %}
<tr>
<td>{{ user.id }}</td>
<td>{{ user.email }}</td>
<td>{{ user.role.roleName }}</td>
<td>
<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">Show</a>
<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Edit</a>
</td>
</tr>
{% else %}
<tr>
<td colspan="5" class="text-center">No records found</td>
</tr>
{% endfor %}
</tbody>
</table>

<a display="left" href="{{ path('app_user_new') }}" class="btn btn-success">Create New User</a>
</div>
{% endblock %}
