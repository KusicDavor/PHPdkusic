{% if form_errors(form) %}
	<div class="alert alert-danger">
		<ul>
			{% for error in form_errors(form) %}
				<li>{{ error.message }}</li>
			{% endfor %}
		</ul>
	</div>
{% endif %}

{{ form_start(form) }}
<div style="margin-left: 10px">
	{{ form_widget(form) }}
</div>
<button style="margin-left: 10px; font-size: 14px" class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

