{% extends 'user/base.html.twig' %}
{% block title %}Edit user
{% endblock %}


{% block body %}
	{% if form_errors(form) %}
		<div>
			<ul>
				{% for error in form_errors(form) %}
					<li>
						{{ error.message }}</li>
				{% endfor %}
			</ul>
		</div>
	{% endif %}
	<h1 style="margin-left: 10px">Edit user</h1>
	<div style="width: 35%; margin-left: 30px">
		{{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
	</div>
	<div style="position: absolute; margin-left: 230px; top: 646px">
		{{ include('user/_delete_form.html.twig') }}
	</div>
{% endblock %}
