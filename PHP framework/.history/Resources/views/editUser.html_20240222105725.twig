<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Korisnik</title>
</head>
<body>
    <h1>Edit Korisnik</h1>
<form action="/korisnici/{{ korisnik.id }}" method="PUT">
    <input type="hidden" name="_method" value="PUT">
    <input type="text" name="ime" value="{{ korisnik.ime }}">
    <input type="text" name="spol" value="{{ korisnik.spol }}">
    <input type="text" name="dob" value="{{ korisnik.dob }}">
    <button type="submit">Save</button>
</form>

    <script>
        function updateUser() {
            var userID = "{{ korisnik.id }}";
            var form = document.getElementById("editForm");
            var formData = new FormData(form);

            var xhr = new XMLHttpRequest();
            xhr.open("PUT", "/korisnici/" + userID);
            xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");

            xhr.onload = function () {
                if (xhr.status === 200) {
                    window.location.href = "/korisnici/update/" + userID;
                } else {
                    alert("Failed to update korisnik");
                }
            };
            xhr.send(new URLSearchParams(formData));
        }
    </script>
</body>
</html>