{% block title %}User Registration
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header">{{ block('title') }}</div>

					<div class="card-body">
						{{ form_start(form) }}
						<div class="form-group">
							{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
						</div>
						<div class="form-group">
							{{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
						</div>
						<div class="form-group">
							{{ form_row(form.register, {'attr': {'class': 'btn btn-primary'}}) }}
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
